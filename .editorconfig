# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# TS/JS-Files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 4

# CSS files
[*.{css,scss,sass,pcss}]
indent_size = 4

# JSON-Files
[*.json]
indent_style = tab

# Markdown-Files
[*.{md,mdx}]
max_line_length = 80

# YAML-Files
[*.{yaml,yml}]
indent_size = 2

# package.json
[package.json]
indent_size = 2
